{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
<div class="jumbotron">
    <div class="container">
        <h1 class="display-4">Season</h1>
    </div>
</div>
<div class="container my-4">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ season.startDate ? season.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ season.endDate ? season.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td>{{ season.discount }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('season_index') }}">back to list</a>

    <a href="{{ path('season_edit', {'id': season.id}) }}">edit</a>

    {{ include('season/_delete_form.html.twig') }}
</div>
{% endblock %}
